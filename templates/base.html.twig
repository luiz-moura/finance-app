<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" href="{{ asset('images/logo.png') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    {% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
    <div class="navbar bg-base-100">
      <div class="navbar-start">
        <div class="dropdown">
          <label tabindex="0" class="btn btn-ghost btn-circle">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"/></svg>
          </label>
          <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
            <li><a href="{{ path('app_transaction.index') }}">Transactions</a></li>
            <li><a href="{{ path('app_category.index') }}">Categories</a></li>
            <li><a href="{{ path('app_budget.index') }}">Budgets</a></li>
          </ul>
        </div>
      </div>
      <div class="navbar-center">
        <a href="/" class="btn btn-ghost normal-case text-xl align-middle">
          <img src="{{ asset('images/logo.png') }}" alt="Logo" width="40px" height="40px">
          SYMFONY FINANCE APP
        </a>
      </div>
    </div>

    <div class="container mx-auto py-20">
      {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
        {% for message in messages %}
          {{ component('alert', {
            type: label,
            message: message
          }) }}
        {% endfor %}
      {% endfor %}

      {% block body %}{% endblock %}
    </div>

    <footer class="footer footer-center p-10 bg-primary text-primary-content">
      <div>
